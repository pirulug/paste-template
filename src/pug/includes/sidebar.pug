//- ===============
//- MIXIN
//- ===============
mixin header(title)
  li.sidebar-header
    | #{title}

mixin item(title, href, icon, isActive = false)
  li.sidebar-item(class={active: isActive})
    a.sidebar-link(href=`${href}`)
      i.align-middle(data-feather=`${icon}`)
      span.align-middle #{title}

mixin subItem(title, href, icon, id)
  li.sidebar-item
    a.sidebar-link.collapsed(data-bs-target=`#${id}` data-bs-toggle='collapse')
      i(data-feather=`${icon}`)
      span.align-middle #{title}
    ul.sidebar-dropdown.list-unstyled.collapse(id=`${id}` data-bs-parent='#sidebar')
      block

mixin subLink(title, href)
  li.sidebar-item
    a.sidebar-link(href=`${href}`) #{title}

//- Sidebar
.sidebar#sidebar
  .sidebar-content.js-simplebar

    // sidebar logo
    a.sidebar-logo(href='#')
      | #{siteName}
      //- img(src='img/logo.svg' alt='')     

    // sidebar user
    .sidebar-user
      .sidebar-user-img
        img(src='https://ui-avatars.com/api/?name=Pirulug' alt='')
      .sidebar-user-title
        span Admin
        p Pirulug
      a.sidebar-user-btn
        i(data-feather="log-out")

    ul.sidebar-nav

      +header('Pages')

      +item("Dashboard", "index.html", "sliders", true)

      +subItem("Paste", "#", "list", "pastes")        
        +subLink("Nuevo", "paste-nuevo.html")
        +subLink("Reportados", "paste-reportados.html")
        +subLink("Pastes", "paste-lista.html")
      
      +item("Usuarios", "usuarios.html", "users")

      +header("Configuracion")

      +item("Configuracion", "configuraciones.html", "settings")
